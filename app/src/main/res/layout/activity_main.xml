<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
             android:id="@+id/chooseImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose image"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:onClick="choose"/>

        <Button
             android:id="@+id/saveImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save image"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:onClick="Save"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
           android:layout_marginTop="20dp" >
            <Button
             android:id="@+id/sepiaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sepia"
            android:layout_weight="1"
            android:textSize="20sp"
            android:onClick="sepia"    />

            <Button
             android:id="@+id/sketchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sketch"
            android:layout_weight="1"
            android:textSize="20sp"
             android:onClick="sketch"   />
            <Button
             android:id="@+id/blurBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blur"
            android:layout_weight="1"
            android:textSize="20sp"
            android:onClick="blur"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/pixelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pixel"
                android:textSize="20sp"
                android:onClick="pixel"/>

              <Button
                android:id="@+id/grayscaleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="grayscale"
                android:textSize="20sp"
                android:onClick="gray"/>




        </LinearLayout>



    </LinearLayout>



</LinearLayout>